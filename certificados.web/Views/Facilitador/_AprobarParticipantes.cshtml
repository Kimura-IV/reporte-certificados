<div class="container mt-1">
    <!-- Tabs para el formulario y la tabla -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link text-dark active" id="generar-tab" data-bs-toggle="tab" href="#generar" role="tab" aria-controls="generar" aria-selected="true">Aprobar Beneficiarios</a>
        </li>
    </ul> 

    <div class="tab-content" id="myTabContent">
        <br /> 
        <!-- Contenido de la pestaña de generar certificados -->
        <div class="tab-pane fade show active" id="generar" role="tabpanel" aria-labelledby="generar-tab">
            <div class="card my-5 mx-2">
                <div class="card-header">
                    <h5>Configuración de Beneficiarios</h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row g-3">
                            <!-- Beneficiario -->
                            <div class="col-md-6 col-lg-5">
                                <div class="form-group">
                                    <label for="beneficiario" class="form-label">Beneficiario</label>
                                    <select class="form-select" id="beneficiario">

                                    </select>
                                </div>
                            </div>
                            <!-- Grupo -->
                            <div class="col-md-6 col-lg-5">
                                <div class="form-group">
                                    <label for="grupo" class="form-label">Grupo</label>
                                    <select class="form-select" id="persona-id-grupo" name="persona-id-grupo" required oninput="this.setCustomValidity('')"
                                            oninvalid="this.setCustomValidity('Por favor, complete este campo.')">
                                        <option value="">Selecciona un grupo</option>
                                    </select>
                                </div>
                            </div>
                            <!-- Condición -->
                            <div class="col-md-6 col-lg-5">
                                <div class="form-group">
                                    <label for="condicion" class="form-label">Condición</label>
                                    <select class="form-select" id="condicion">
                                        <option value="1" selected>Ambos</option>
                                        <option value="2">Calificación</option>
                                        <option value="3">Asistencia</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mx-2 my-5">
                <div class="card-header">
                    <h5>Lista de Participantes</h5>
                </div>
                <div class="container my-1">
                    <div class="row">
                        <div class="col">
                            <table id="tabla-certificado" class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Cédula</th>
                                        <th>Nombres</th>
                                        <th>Asistencia</th>
                                        <th>Calificaciones</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Aquí se cargarán los registros de certificados -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div> 
                <div class="row justify-content-center">
                    <div class="col-auto">
                    <button onclick="enviarDatosAprobados()" class="btn btn-primary me-2">Guardar</button>
                        <button class="btn btn-secondary">Cancelar</button>
                    </div>
                </div> 
        </div>
    </div>
</div>
 