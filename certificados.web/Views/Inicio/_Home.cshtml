<div class="ms-3 welcome-section">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="material-card p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-1" id="dashboard-init">Dashboard, </h4>
                        <p class="text-muted mb-0">Bienvenido de nuevo, <strong class="username-dashboard"></strong></p>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="badge bg-success badge-custom me-2">
                            <i class="fas fa-circle me-1"></i> Online
                        </span>
                        <span class="text-muted last-login"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-3">
        <div class="col-xl-3 col-sm-6  ms-2 border  border-1 border-primary  rounded-2">
            <div class="material-card">
                <div class="card-body ">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon bg-primary bg-opacity-10 text-primary me-3">
                            <i class="fas fa-users"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">Personas Registradas</h6>
                            <h3 class="registered-people mb-0"></h3>
                            <h3 class="registered-people mb-0"></h3>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="progress">
                            <div class="progress-bar bg-primary progress-registered"></div>
                        </div>
                        <small class="status-registered mt-2 d-block"></small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 ms-2  border  border-1 border-warning rounded-2">
            <div class="material-card">
                <div class="card-body ">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon bg-warning bg-opacity-10 text-warning me-3">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">Eventos</h6>
                            <h3 class="events-count mb-0"></h3>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="progress">
                            <div class="progress-bar bg-warning progress-events"></div>
                        </div>
                        <small class="status-events mt-2 d-block"></small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 ms-2 border  border-1 border-danger rounded-2">
            <div class="material-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon bg-danger bg-opacity-10 text-danger me-3">
                            <i class="fas fa-certificate"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">Eventos con certificados</h6>
                            <h3 class="certificates-count mb-0"></h3>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="progress">
                            <div class="progress-bar bg-danger progress-certificates"></div>
                        </div>
                        <small class="status-certificates mt-2 d-block"></small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-xl-7 mb-4 mb-xl-0 border border-1 rounded-2 border-dark">
            <div class="material-card p-4 ">
                <h5 class="card-title mb-4">Estadísticas Generales</h5>
                <canvas id="mainChart" height="135"></canvas>
            </div>
        </div>
        <div class="col-xl-4 border border-1  ms-2 rounded-2 border-dark">
            <div class="material-card p-4">
                <h5 class="card-title mb-4">Distribución</h5>
                <canvas id="pieChart" height="300"></canvas>
            </div>
        </div>
    </div>
 
</div>