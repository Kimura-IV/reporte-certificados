
<div class="container mt-4">
    <div class="tab-content" id="myTabContent">
        <div>
            <h1>Reporte de certificados</h1>
            <p>Los certificados que han sido creados en el sistema</p>
        </div>

        <br />
        <!-- Contenido de la pestaña de la tabla -->

        <div id="injectModal">
        </div>
        <div class="row">

            <div class="col-12 col-md-4 mb-3">
                <label for="emision" class="form-label">Fecha de Emisión</label>
                <input type="date" id="emision" class="form-control" />

            </div>
            <div class="col-12 col-md-4 mb-3">
                <label for="plantilla" class="form-label">Plantilla</label>
                <select id="plantilla" class="form-select">
                    <option selected disabled value="">Seleccione una plantilla</option>
                </select>
            </div>

            <div class="col-12 col-md-4 mb-3">
                <label for="firmante" class="form-label">Firmante</label>
                <select id="firmante" class="form-select">
                    <option selected disabled value="">Seleccione un firmante</option>
                </select>
            </div>

            <div class="col-12 col-md-4 mb-3">
                <label for="tipo" class="form-label">Tipo Certificado</label>
                <select id="tipo" class="form-select">
                    <option selected disabled value="">Seleccione un Tipo Certificado</option>
                </select>
            </div>

            <div class="col-12 col-md-4 mb-3">
                <label for="creador" class="form-label">Usuario Creador</label>
                <select id="creador" class="form-select">
                    <option selected disabled value="">Seleccione un creador</option>
                </select>
            </div>

            <div class="col-12 col-md-4 mb-3">
                <label for="estado" class="form-label">Estado</label>
                <select id="estado" class="form-select">
                    <option selected disabled value="">Seleccione un estado</option>
                    <option value="true">Activo</option>
                    <option value="false">Inactivo</option>
                </select>
            </div>
        </div>

        <div class="d-flex  justify-content-end align-items-center">
            <label class="me-2">Limpiar filtros</label>
            <button class="btn btn-danger" id="btnLimpiar">
                <i class="bi bi-trash"></i>
            </button>

        </div>
        <div class="tab-pane fade show active m-1" id="tabla" role="tabpanel" aria-labelledby="tabla-tab">
            <div>
                <canvas id="myChart"></canvas>
            </div>

            <table id="tabla-certificados" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titulo</th>
                        <th>Fecha de creacion</th>
                        <th>Estado</th>
                        <th>Imagen</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Aquí se mostrarán los datos de los certificados -->
                </tbody>
            </table>
        </div>
    </div>
</div>
