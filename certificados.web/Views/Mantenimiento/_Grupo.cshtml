<div class="container mt-4">
    <!-- Tabs para el formulario y la tabla -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link text-dark active" id="tabla-tab" data-bs-toggle="tab" href="#tabla" role="tab" aria-controls="tabla" aria-selected="true">Listar Grupos</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link text-dark" id="formulario-tab" data-bs-toggle="tab" href="#formulario" role="tab" aria-controls="formulario" aria-selected="false">Agregar Grupo</a>
        </li>
        <li class="nav-item" role="presentation" >
            <a class="nav-link text-dark" id="listar-personas-tab" data-bs-toggle="tab" href="#listar-personas" role="tab" aria-controls="listar-personas" aria-selected="false">Listar Grupo Personas</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link text-dark" id="crear-personas-tab" data-bs-toggle="tab" href="#crear-personas" role="tab" aria-controls="crear-personas" aria-selected="false">Crear Grupo Personas Masivo</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link text-dark" id="crear-gpindividual-tab" data-bs-toggle="tab" href="#crear-gpindividual" role="tab" aria-controls="crear-gpindividual" aria-selected="false">Crear Grupo Persona Individual</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link text-dark" id="buscar-grupo-cedula-tab" data-bs-toggle="tab" href="#buscar-grupo-cedula" role="tab" aria-controls="buscar-grupo-cedula" aria-selected="false">Buscar Grupo Persona</a>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">
        <br />
        <!-- Contenido de la pestaña de la tabla -->
        <div class="tab-pane fade show active m-1" id="tabla" role="tabpanel" aria-labelledby="tabla-tab">
            <table id="tabla-grupo" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID Grupo</th>
                        <th>Nombre del Grupo</th>
                        <th>Cantidad</th>
                        <th>Usuario Ingreso</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Aquí se mostrarán los datos de los grupos -->
                </tbody>
            </table>
        </div>

        <!-- Contenido de la pestaña del formulario -->
        <div class="tab-pane fade" id="formulario" role="tabpanel" aria-labelledby="formulario-tab">
            <!-- Formulario de Agregar Grupo -->
            <form id="form-grupo" class="border border-2 p-4 rounded" onsubmit="return handleAgregarGrupo(event)">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="grupo-nombre" class="form-label">Nombre del Grupo</label>
                        <input type="text" class="form-control" id="grupo-nombre" name="grupo-nombre" placeholder="Ingresa el nombre del grupo" required oninput="this.setCustomValidity('')"
                               oninvalid="this.setCustomValidity('Por favor, complete este campo.')">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="grupo-cantidad" class="form-label">Cantidad</label>
                        <input type="number" class="form-control" id="grupo-cantidad" name="grupo-cantidad" placeholder="Ingresa la cantidad" required oninput="this.setCustomValidity('')"
                               oninvalid="this.setCustomValidity('Por favor, complete este campo.')">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="grupo-usuario" class="form-label">Usuario Ingreso</label>
                        <input type="text" class="form-control" id="grupo-usuario" name="grupo-usuario" placeholder="Ingresa el usuario que registró el grupo" disabled required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <input type="hidden" id="grupo-id" name="grupo-id">
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary mx-2">Guardar</button>
                    <button type="reset" class="btn btn-secondary mx-2" onsubmit="mantenerValorCampo()">Limpiar</button>
                </div>
            </form>
        </div>

        <!-- Contenido de la pestaña de listar grupo personas -->
        <div class="tab-pane fade" id="listar-personas" role="tabpanel" aria-labelledby="listar-personas-tab">
            <table id="tabla-grupo-personas" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Id Grupo</th>
                        <th>Cédula</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Aquí se mostrarán los datos del grupo personas -->
                </tbody>
            </table>
        </div>

        <!-- Contenido de la pestaña de agregar grupo personas -->
        <div class="tab-pane fade" id="crear-personas" role="tabpanel" aria-labelledby="crear-personas-tab">
            <!-- Formulario de Agregar Grupo Personas -->
            <form id="form-grupo-personas" class="border border-2 p-4 rounded" onsubmit="handleAgregarGrupoPersonas(event)">
                <div class="row">
                    <!-- Campo para seleccionar un grupo -->
                    <div class="col-md-6 mb-3">
                        <label for="persona-id-grupo" class="form-label">Grupo Asociado</label>
                        <select class="form-select" id="persona-id-grupo" name="persona-id-grupo" required oninput="this.setCustomValidity('')"
                                oninvalid="this.setCustomValidity('Por favor, complete este campo.')">
                            <option value="">Selecciona un grupo</option>
                            <!-- Opciones dinámicas para los grupos -->
                        </select>
                    </div>

                    <!-- Campo para cargar el archivo CSV -->
                    <div class="col-md-6 mb-3">
                        <label for="persona-cedulas-csv" class="form-label">Cargar Cédulas (.csv)</label>
                        <input type="file" class="form-control" id="persona-cedulas-csv" name="persona-cedulas-csv" accept=".csv" required oninput="this.setCustomValidity('')"
                               oninvalid="this.setCustomValidity('Por favor, complete este campo.')">
                        <div class="form-text">Solo se permite cargar archivos con extensión .csv</div>
                    </div>
                </div>
                <div class="row">
                    <!-- Campo para el usuario que realiza el ingreso -->
                    <div class="col-md-6 mb-3">
                        <label for="persona-usuario-ingreso" class="form-label">Usuario Ingreso</label>
                        <input type="text" class="form-control" id="persona-usuario-ingreso" name="persona-usuario-ingreso" placeholder="Ingresa el usuario que realiza el ingreso" disabled required>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary mx-2">Guardar</button>
                    <button type="reset" class="btn btn-secondary mx-2">Limpiar</button>
                </div>
            </form>
        </div>

        <!-- Contenido de la pestaña de agregar grupo personas individual -->
        <div class="tab-pane fade" id="crear-gpindividual" role="tabpanel" aria-labelledby="crear-gpindividual-tab">
            <!-- Formulario de Agregar Grupo Personas individual -->
            <form id="form-crear-gpindividual" class="border border-2 p-4 rounded" onsubmit="handleAgregarGrupoPersonasIndividual(event)">
                <div class="row">
                    <!-- Campo para seleccionar un grupo -->
                    <div class="col-md-6 mb-3">
                        <label for="persona-id-grupo-individual" class="form-label">Grupo Asociado</label>
                        <select class="form-select" id="persona-id-grupo-individual" name="persona-id-grupo-individual" required oninput="this.setCustomValidity('')"
                                oninvalid="this.setCustomValidity('Por favor, complete este campo.')">
                            <option selected disabled value="">Selecciona un grupo</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="cedula-persona-individual" class="form-label">Cédula</label>
                        <input type="text" class="form-control" id="cedula-persona-individual" name="cedula-persona-individual" placeholder="Ingrese número de cedula" maxlength="10" required>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary mx-2">Guardar</button>
                    <button type="reset" class="btn btn-secondary mx-2">Limpiar</button>
                </div>
            </form>
        </div>

        <!-- Nuevo Formulario: Buscar por IDGrupoPersona y Cédula -->
        <div class="tab-pane fade" id="buscar-grupo-cedula" role="tabpanel" aria-labelledby="buscar-grupo-cedula-tab">
            <form id="form-buscar-grupo-cedula" class="border border-2 p-4 rounded" onsubmit="return handleBuscarGrupoCedula(event)">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="buscar-id-grupo-cedula" class="form-label">ID Grupo Persona</label>
                        <input type="number" class="form-control" id="buscar-id-grupo-cedula" name="buscar-id-grupo-cedula" placeholder="Ingresa el ID del grupo persona" required oninput="this.setCustomValidity('')"
                               oninvalid="this.setCustomValidity('Por favor, complete este campo.')">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="buscar-cedula" class="form-label">Cédula</label>
                        <input type="text" class="form-control" id="buscar-cedula" name="buscar-cedula" placeholder="Ingresa la cédula" required oninput="this.setCustomValidity('')"
                               oninvalid="this.setCustomValidity('Por favor, complete este campo.')">
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary mx-2">Buscar</button>
                </div>
            </form>

            <!-- Formulario para mostrar los datos obtenidos -->
            <form id="form-datos-grupo-cedula" class="border border-2 p-4 rounded mt-4 d-none">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="id-grupo-persona" class="form-label">ID Grupo Persona</label>
                        <input type="text" class="form-control" id="id-grupo-persona" name="id-grupo-persona" disabled>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="id-grupo" class="form-label">ID Grupo</label>
                        <input type="text" class="form-control" id="id-grupo" name="id-grupo" disabled>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="cedula" class="form-label">Cédula</label>
                        <input type="text" class="form-control" id="cedula" name="cedula" disabled>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="estado" class="form-label">Estado</label>
                        <input type="text" class="form-control" id="estado" name="estado" disabled>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="fecha-creacion" class="form-label">Fecha Creación</label>
                        <input type="text" class="form-control" id="fecha-creacion" name="fecha-creacion" disabled>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="usuario-ingreso" class="form-label">Usuario Ingreso</label>
                        <input type="text" class="form-control" id="usuario-ingreso" name="usuario-ingreso" disabled>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de edición con formulario -->
<div class="modal fade" id="modal-editar" tabindex="-1" aria-labelledby="modal-editar-label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-editar-label">Editar Grupo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Formulario de Edición del Grupo -->
                <form id="form-editar-grupo" class="border border-2 p-4 rounded" onsubmit="return handleEditarGrupo(event)">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="grupo-nombre-editar" class="form-label">Nombre del Grupo</label>
                            <input type="text" class="form-control" id="grupo-nombre-editar" name="grupo-nombre-editar" placeholder="Ingresa el nombre del grupo" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="grupo-cantidad-editar" class="form-label">Cantidad</label>
                            <input type="number" class="form-control" id="grupo-cantidad-editar" name="grupo-cantidad-editar" placeholder="Ingresa la cantidad" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="grupo-usuario-editar" class="form-label">Usuario Ingreso</label>
                            <input type="text" class="form-control" id="grupo-usuario-editar" name="grupo-usuario-editar" placeholder="Ingresa el usuario que registró el grupo" disabled required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="hidden" id="grupo-id-editar" name="grupo-id-editar">
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary mx-2">Guardar Cambios</button>
                        <button type="button" class="btn btn-secondary mx-2" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>