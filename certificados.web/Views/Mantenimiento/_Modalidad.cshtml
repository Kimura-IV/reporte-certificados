<div class="container mt-4">
    <!-- Tabs para el formulario y la tabla -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link text-dark active" id="tabla-tab" data-bs-toggle="tab" href="#tabla" role="tab" aria-controls="tabla" aria-selected="true">Listar Modalidades</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link text-dark" id="formulario-tab" data-bs-toggle="tab" href="#formulario" role="tab" aria-controls="formulario" aria-selected="false">Agregar Modalidad</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link text-dark" id="buscar-tab" data-bs-toggle="tab" href="#buscar" role="tab" aria-controls="buscar" aria-selected="false">Buscar Modalidad</a>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">
        <br />
        <!-- Contenido de la pestaña de la tabla -->
        <div class="tab-pane fade show active m-1" id="tabla" role="tabpanel" aria-labelledby="tabla-tab">
            <table id="tabla-modalidad" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Usuario Ingreso</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Aquí se mostrarán los datos de las modalidades -->
                </tbody>
            </table>
        </div>

        <!-- Contenido de la pestaña del formulario -->
        <div class="tab-pane fade" id="formulario" role="tabpanel" aria-labelledby="formulario-tab">
            <!-- Formulario de Agregar Modalidad -->
            <form id="form-modalidad" class="border border-2 p-4 rounded" onsubmit="handleAgregarModalidad(event)">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="modalidad-nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="modalidad-nombre" name="modalidad-nombre" placeholder="Ingresa el nombre de la modalidad" required oninput="this.setCustomValidity('')"
                               oninvalid="this.setCustomValidity('Por favor, complete este campo.')">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="modalidad-descripcion" class="form-label">Descripción</label>
                        <input type="text" class="form-control" id="modalidad-descripcion" name="modalidad-descripcion" placeholder="Ingresa la descripción" required oninput="this.setCustomValidity('')"
                               oninvalid="this.setCustomValidity('Por favor, complete este campo.')">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="modalidad-usuario" class="form-label">Usuario Ingreso</label>
                        <input type="text" class="form-control" id="modalidad-usuario" name="modalidad-usuario" placeholder="Ingresa el usuario" disabled value="Admin" required>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary mx-2">Guardar</button>
                    <button type="reset" class="btn btn-secondary mx-2">Limpiar</button>
                </div>
            </form>
        </div>
        <!-- Contenido de la pestaña de búsqueda -->
        <div class="tab-pane fade" id="buscar" role="tabpanel" aria-labelledby="buscar-tab">
            <!-- Formulario de Búsqueda -->
            <form id="form-buscar-modalidad" class="border border-2 p-4 rounded" onsubmit="handleBuscarModalidad(event)">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="buscar-id" class="form-label">ID Modalidad</label>
                        <input type="text" class="form-control" id="buscar-id" name="buscar-id" placeholder="Ingresa el ID de la modalidad" required>
                    </div>
                    <div class="col-md-6 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                        <button type="reset" class="btn btn-secondary mx-2">Limpiar</button>
                    </div>
                </div>
            </form>
            <!-- Formulario de Resultado de Búsqueda -->
            <form id="form-resultado-busqueda" class="border border-2 p-4 rounded d-none">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="id-modalidad" class="form-label">ID Modalidad</label>
                        <input type="text" class="form-control" id="id-modalidad" name="id-modalidad" disabled>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="nombre-modalidad" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre-modalidad" name="nombre-modalidad" disabled>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="descripcion-modalidad" class="form-label">Descripción</label>
                        <input type="text" class="form-control" id="descripcion-modalidad" name="descripcion-modalidad" disabled>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="fcreacion-modalidad" class="form-label">Fecha Creación</label>
                        <input type="text" class="form-control" id="fcreacion-modalidad" name="fcreacion-modalidad" disabled>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="usuario-ingreso-modalidad" class="form-label">Usuario Ingreso</label>
                        <input type="text" class="form-control" id="usuario-ingreso-modalidad" name="usuario-ingreso-modalidad" disabled>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de edición con formulario -->
<div class="modal fade" id="modal-editar" tabindex="-1" aria-labelledby="modal-editar-label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-editar-label">Editar Modalidad</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Formulario de Edición de Modalidad -->
                <form id="form-editar-modalidad" class="border border-2 p-4 rounded" onsubmit="handleEditarModalidad(event)">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="modalidad-nombre-editar" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="modalidad-nombre-editar" name="modalidad-nombre-editar" placeholder="Ingresa el nombre de la modalidad" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="modalidad-descripcion-editar" class="form-label">Descripción</label>
                            <input type="text" class="form-control" id="modalidad-descripcion-editar" name="modalidad-descripcion-editar" placeholder="Ingresa la descripción" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="modalidad-usuario-editar" class="form-label">Usuario Ingreso</label>
                            <input type="text" class="form-control" id="modalidad-usuario-editar" name="modalidad-usuario-editar" placeholder="Usuario" disabled required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="hidden" id="modalidad-id-editar" name="modalidad-id-editar">
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary mx-2">Guardar Cambios</button>
                        <button type="button" class="btn btn-secondary mx-2" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
