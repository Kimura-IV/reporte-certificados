<div class="container mt-4">
    <!-- Tabs para la tabla y el formulario -->
    <ul class="nav nav-tabs" id="docenteTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link text-dark active" id="tabla-tab" data-bs-toggle="tab" href="#tabla" role="tab" aria-controls="tabla" aria-selected="true">Listar Docentes</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link text-dark" id="formulario-tab" data-bs-toggle="tab" href="#formulario" role="tab" aria-controls="formulario" aria-selected="false">Agregar Docente</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link text-dark" id="buscar-tab" data-bs-toggle="tab" href="#buscar" role="tab" aria-controls="buscar" aria-selected="false">Buscar Docente</a>
        </li>
    </ul>

    <div class="tab-content" id="docenteTabContent">
        <br />
        <!-- Contenido de la pestaña de la tabla -->
        <div class="tab-pane fade show active m-1" id="tabla" role="tabpanel" aria-labelledby="tabla-tab">
            <table id="tabla-docente" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Código Docente</th>
                        <th>Cédula</th>
                        <th>Título</th>
                        <th>Facultad</th>
                        <th>Carrera</th>
                        <th>Estado</th>
                        <th>Usuario Ingreso</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Aquí se cargarán los registros de docentes -->
                </tbody>
            </table>
        </div>

        <!-- Contenido de la pestaña del formulario -->
        <div class="tab-pane fade" id="formulario" role="tabpanel" aria-labelledby="formulario-tab">
            <!-- Formulario para agregar/editar docente -->
            <form id="form-docente" class="border border-2 p-4 rounded" onsubmit="return handleAgregarDocente(event)">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="docente-codigo" class="form-label">Código Docente</label>
                        <input type="text" class="form-control" id="docente-codigo" placeholder="Ingresa el código docente" required oninput="this.setCustomValidity('')"
                               oninvalid="this.setCustomValidity('Por favor, complete este campo.')">
                    </div>
                    <div class="col-md-6">
                        <label for="docente-cedula" class="form-label">Cédula</label>
                        <input type="text" class="form-control" id="docente-cedula" placeholder="Ingresa la cédula" required oninput="this.setCustomValidity('')"
                               oninvalid="this.setCustomValidity('Por favor, complete este campo.')">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="docente-titulo" class="form-label">Título</label>
                        <input type="text" class="form-control" id="docente-titulo" placeholder="Ingresa el título" required oninput="this.setCustomValidity('')"
                               oninvalid="this.setCustomValidity('Por favor, complete este campo.')">
                    </div>
                    <div class="col-md-6">
                        <label for="docente-facultad" class="form-label">Facultad</label>
                        <input type="text" class="form-control" id="docente-facultad" placeholder="Ingresa la facultad" required oninput="this.setCustomValidity('')"
                               oninvalid="this.setCustomValidity('Por favor, complete este campo.')">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="docente-carrera" class="form-label">Carrera</label>
                        <input type="text" class="form-control" id="docente-carrera" placeholder="Ingresa la carrera" required oninput="this.setCustomValidity('')"
                               oninvalid="this.setCustomValidity('Por favor, complete este campo.')">
                    </div>
                    <div class="col-md-6">
                        <label for="docente-estado" class="form-label">Estado</label >
                        <select class="form-control" id="docente-estado" required>
                            <option value="1">Activo</option>
                            <option value="2">Inactivo</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="docente-usuarioingreso" class="form-label">Usuario Ingreso</label>
                        <input type="text" class="form-control" id="docente-usuarioingreso" placeholder="Usuario ingreso" disabled onreset="false" required>
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary mx-2">Guardar</button>
                    <button type="reset" class="btn btn-secondary mx-2">Limpiar</button>
                </div>
            </form>
        </div>

        <div class="tab-pane fade" id="buscar" role="tabpanel" aria-labelledby="buscar-tab">
            <form id="form-buscar-docente" class="border border-2 p-4 rounded" onsubmit="return handleBuscarDocente(event)">
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label for="buscar-cedula" class="form-label">Cédula</label>
                        <input type="text" class="form-control" id="buscar-cedula" placeholder="Ingresa la cédula" required oninput="this.setCustomValidity('')"
                               oninvalid="this.setCustomValidity('Por favor, ingresa una cédula válida.')">
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary mx-2">Buscar</button>
                </div>
            </form>

            <form id="form-busqueda-docente" class="border border-2 p-4 rounded mt-4 d-none">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="docente-codigo-buscar" class="form-label">Código Docente</label>
                        <input type="text" class="form-control" id="docente-codigo-buscar" disabled>
                    </div>
                    <div class="col-md-6">
                        <label for="docente-cedula-buscar" class="form-label">Cédula</label>
                        <input type="text" class="form-control" id="docente-cedula-buscar" disabled>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="docente-titulo-buscar" class="form-label">Título</label>
                        <input type="text" class="form-control" id="docente-titulo-buscar" disabled>
                    </div>
                    <div class="col-md-6">
                        <label for="docente-facultad-buscar" class="form-label">Facultad</label>
                        <input type="text" class="form-control" id="docente-facultad-buscar" disabled>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="docente-carrera-buscar" class="form-label">Carrera</label>
                        <input type="text" class="form-control" id="docente-carrera-buscar" disabled>
                    </div>
                    <div class="col-md-6">
                        <label for="docente-fecha-buscar" class="form-label">Fecha de Creación</label>
                        <input type="text" class="form-control" id="docente-fecha-buscar" disabled>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="docente-estado-buscar" class="form-label">Estado</label>
                        <input type="text" class="form-control" id="docente-estado-buscar" disabled>
                    </div>
                    <div class="col-md-6">
                        <label for="docente-usuario-buscar" class="form-label">Usuario Ingreso</label>
                        <input type="text" class="form-control" id="docente-usuario-buscar" disabled>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

<!-- Modal para editar docente -->
<div class="modal fade" id="modal-editar-docente" tabindex="-1" aria-labelledby="modal-editar-docente-label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-editar-docente-label">Editar Docente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Formulario de Edición del Docente -->
                <form id="form-editar-docente" class="border border-2 p-4 rounded" onsubmit="return handleEditarDocente(event)">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="docente-codigo-editar" class="form-label">Código Docente</label>
                            <input type="text" class="form-control" id="docente-codigo-editar" name="docente-codigo-editar" placeholder="Ingresa el código docente" disabled required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="docente-cedula-editar" class="form-label">Cédula</label>
                            <input type="text" class="form-control" id="docente-cedula-editar" name="docente-cedula-editar" placeholder="Ingresa la cédula" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="docente-titulo-editar" class="form-label">Título</label>
                            <input type="text" class="form-control" id="docente-titulo-editar" name="docente-titulo-editar" placeholder="Ingresa el título" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="docente-facultad-editar" class="form-label">Facultad</label>
                            <input type="text" class="form-control" id="docente-facultad-editar" name="docente-facultad-editar" placeholder="Ingresa la facultad" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="docente-carrera-editar" class="form-label">Carrera</label>
                            <input type="text" class="form-control" id="docente-carrera-editar" name="docente-carrera-editar" placeholder="Ingresa la carrera" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="docente-estado-editar" class="form-label">Estado</label>
                            <select class="form-control" id="docente-estado-editar" name="docente-estado-editar">
                                <option value="1">Activo</option>
                                <option value="2">Inactivo</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="docente-usuarioingreso-editar" class="form-label">Usuario Ingreso</label>
                            <input type="text" class="form-control" id="docente-usuarioingreso-editar" name="docente-usuarioingreso-editar" placeholder="Usuario ingreso" disabled required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="hidden" id="docente-id-editar" name="docente-id-editar">
                        </div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary mx-2">Guardar Cambios</button>
                        <button type="button" class="btn btn-secondary mx-2" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
