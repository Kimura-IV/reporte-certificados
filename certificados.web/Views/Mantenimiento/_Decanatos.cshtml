<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active text-dark" id="home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Ver Decanatos</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link text-dark" id="add-tab" data-bs-toggle="tab" data-bs-target="#nav-add" type="button" role="tab" aria-controls="nav-add" aria-selected="false">Agregar Decanato</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link text-dark" id="search-tab" data-bs-toggle="tab" data-bs-target="#nav-search" type="button" role="tab" aria-controls="nav-search" aria-selected="false">Buscar Decanato</button>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <!-- Tab: Ver Decanatos -->
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="home-tab">
        <div class="container mt-4">
            <table id="tabla-decanato" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>F. Ingreso</th>
                        <th>F. Modificacion</th>
                        <th>U. Ingreso</th>
                        <th>U. Actualizacion</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Aquí se cargarán los registros de roles -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Tab: Agregar Decanato --> 
    <div class="tab-pane fade" id="nav-add" role="tabpanel" aria-labelledby="add-tab">
        <div class="card border-secondary mx-auto mt-3" style="max-width: 600px; border-radius: 8px;">
            <div class="card-body">
                <h4 class="card-title text-center">Agregar Decanato</h4>
                <form id="add-decanato-form" novalidate onsubmit="return crearDecanato(event)">
                    <div class="mb-3">
                        <label for="decanato-nombre" class="form-label">Nombre del Decanato</label>
                        <input type="text" class="form-control" id="decanato-nombre" required oninput="this.setCustomValidity('')"
                               oninvalid="this.setCustomValidity('Por favor, complete este campo.')">
                    </div>
                    <div class="mb-3">
                        <label for="decanato-usuario-ingreso" class="form-label">Usuario Ingreso</label>
                        <input type="text" class="form-control" id="decanato-usuario-ingreso"  disabled readonly>
                    </div>
                    <button type="submit" class="btn btn-primary w-40">Guardar Decanato</button>
                </form>
            </div>
        </div>
    </div>


    <!-- Tab: Buscar Decanato -->
    <div class="tab-pane fade" id="nav-search" role="tabpanel" aria-labelledby="search-tab">
        <center>
            <div class="p-3 w-50 my-2 bg-white shadow-sm">
                <h3>Buscar Decanato</h3>
                <div class="input-group my-2">
                    <input type="text" id="buscar-decanato" class="form-control" placeholder="Ingresa el nombre del Decanato" required>
                    <button class="btn btn-primary" type="button" onclick="BuscarDecanato()">Buscar</button>
                </div>
            </div>
        </center>
            <div class="card mx-2 my-2">
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label for="nombreDecanato" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="nombreDecanato" disabled>
                        </div>
                        <div class="mb-3">
                            <label for="fCreacion" class="form-label">Fecha de Creación</label>
                            <input type="text" class="form-control" id="fCreacion" disabled>
                        </div>
                        <div class="mb-3">
                            <label for="fModificacion" class="form-label">Fecha de Modificación</label>
                            <input type="text" class="form-control" id="fModificacion" disabled>
                        </div>
                        <div class="mb-3">
                            <label for="usuarioIngreso" class="form-label">Usuario de Ingreso</label>
                            <input type="text" class="form-control" id="usuarioIngreso" disabled>
                        </div>
                        <div class="mb-3">
                            <label for="usuarioActualizacion" class="form-label">Usuario de Actualización</label>
                            <input type="text" class="form-control" id="usuarioActualizacion" disabled>
                        </div>
                    </form>
                </div>
            </div>


    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="editarDecanatoModal" tabindex="-1" aria-labelledby="editarDecanatoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editarDecanatoModalLabel">Editar Decanato</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formEditarDecanato">
                    <input type="hidden" class="form-control" id="idDecanatoEdit" required>
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombreEdit" required>
                    </div>
                    <div class="mb-3">
                        <label for="fCreacion" class="form-label">Fecha de Creación</label>
                        <input type="text" class="form-control" id="fCreacionEdit" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="usuarioActualizacion" class="form-label">Usuario de Actualización</label>
                        <input type="text" class="form-control" id="usuarioActualizacionEdit" disabled>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="guardarCambiosDecanato()">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal de Confirmación -->
<div class="modal fade" id="confirmarEliminarModal" tabindex="-1" aria-labelledby="confirmarEliminarModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmarEliminarModalLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Está seguro de que desea eliminar este decanato? Esta acción no se puede deshacer.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirmarEliminarBtn">Eliminar</button>
            </div>
        </div>
    </div>
</div>


