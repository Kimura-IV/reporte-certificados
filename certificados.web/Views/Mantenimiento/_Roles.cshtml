<div class="tab-content" id="nav-tabContent">
    <!-- Tab Ver Roles -->
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
        <div class="container mt-4">
            <table id="tabla-rol" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Observación</th>
                        <th>Estado</th>
                        <th>Usuario Ingreso</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Aquí se cargarán los registros de roles -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Tab Agregar Rol -->
    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
        <div class="card mx-5 my-5">
            <div class="card-header">Registro de un Rol</div>
            <form class="row g-3 px-3" onsubmit="return agregarRol(event)">
                <div class="col-md-6">
                    <label for="rolNombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="rolNombre">
                </div>
                <div class="col-md-3">
                    <label for="rolEstado" class="form-label">Estado</label>
                    <select class="form-select" id="rolEstado">
                        <option selected disabled value="">Selecciona un estado</option>
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="usuarioIngreso" class="form-label">Usuario Ingreso</label>
                    <input type="text" class="form-control" id="usuarioIngreso" disabled>
                </div>
                <div class="mb-3">
                    <label for="rolDescripcion" class="form-label">Descripción</label>
                    <textarea class="form-control" id="rolDescripcion" placeholder="Descripción obligatoria"></textarea>
                </div>
                <div class="col-12 d-flex justify-content-center">
                    <button class="btn btn-primary me-3" type="submit">Guardar</button>
                    <button class="btn btn-danger" type="button" onclick="limpiarRol(event)">Limpiar</button>
                </div>
            </form>

        </div>
    </div>

     
    <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">
        <center>

                <div class="p-3 w-50 my-2 bg-white shadow-sm">
                    <label for="buscar-rol" class="form-label ">
                        Buscar por ID del Rol
                    </label>
                    <div class="input-group my-2">
                        <input type="text" id="buscar-rol" class="form-control form-control-sm" placeholder="Ingresa el ID del rol" required>
                        <button class="btn btn-primary"  type="button"   onclick="buscarRol()">  Buscar  </button>
                    </div>
                </div>

            <div class="card mx-2 my-2">
                <div class="card mx-5 my-5 p-4 shadow-sm">
                    <h5 class="card-title mb-4">Detalles del Rol</h5>
                    <div class="row g-3"> 
                        <div class="col-md-2">
                            <label for="idRolFind" class="form-label">Identificador</label>
                            <input type="text" class="form-control" id="idRolFind" disabled readonly>
                        </div>
                         
                        <div class="col-md-4">
                            <label for="rolNombreFind" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="rolNombreFind" disabled readonly>
                        </div>
                         
                        <div class="col-md-2">
                            <label for="estadoRolFind" class="form-label">Estado</label>
                            <input type="text" class="form-control" id="estadoRolFind" disabled readonly>
                        </div> 

                        <div class="col-md-3">
                            <label for="usuarioIngresoFind" class="form-label">Usuario Ingreso</label>
                            <input type="text" class="form-control" id="usuarioIngresoFind" disabled readonly>
                        </div>
                         
                        <div class="col-md-3">
                            <label for="usuarioActualizacion" class="form-label">Usuario Actualización</label>
                            <input type="text" class="form-control" id="usuarioActualizacion" disabled readonly>
                        </div>
                         
                        <div class="col-md-3">
                            <label for="fechaInicio" class="form-label">Fecha Creación</label>
                            <input type="text" class="form-control" id="fechaInicio" disabled readonly>
                        </div>
                         
                        <div class="col-md-3">
                            <label for="fechaActualizacion" class="form-label">Última Actualización</label>
                            <input type="text" class="form-control" id="fechaActualizacion" disabled readonly>
                        </div>
                         
                        <div class="col-6">
                            <label for="rolDescripcionFind" class="form-label">Descripción</label>
                            <textarea class="form-control" id="rolDescripcionFind" rows="3" disabled readonly></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </center>
      
    </div>
</div>
<!--- MODAL PARA ELIMINAR EL ROL---->

    <div class="modal fade" id="confirmarEliminacionModal" tabindex="-1" aria-labelledby="confirmarEliminacionLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="confirmarEliminacionLabel">Confirmar Eliminación</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            ¿Está seguro que desea eliminar este rol?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" onclick="confirmarEliminacion(event)">Eliminar</button>
          </div>
        </div>
      </div>
    </div>

<!--- MODAL PARA EDITAR EL ROL----> 
<div class="modal fade" id="editarRolModal" tabindex="-1" aria-labelledby="editarRolLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editarRolLabel">Editar Rol</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="row g-3" id="editarRolForm" novalidate onsubmit="return confirmarEditar(event)">
                    <input type="hidden" class="form-control" id="rolIdEdit">
                    <div class="col-md-6 position-relative">
                        <label for="rolNombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="rolNombreEdit" required>
                        <div class="invalid-tooltip">Escribe el nombre del Rol</div>
                    </div>
                    <div class="col-md-6">
                        <label for="rolDescripcion" class="form-label">Observación</label>
                        <textarea class="form-control" id="rolDescripcionEdit" placeholder="Descripción obligatoria" required></textarea>
                        <div class="invalid-feedback">Escribe la descripción</div>
                    </div>
                    <div class="col-md-6">
                        <label for="rolEstado" class="form-label">Estado</label>
                        <select class="form-select" id="rolEstadoEdit" required>
                            <option value="" disabled selected>Selecciona el estado</option>
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                        <div class="invalid-feedback">Selecciona un estado</div>
                    </div>
                    <div class="col-md-12 d-flex justify-content-center">
                        <button class="btn btn-primary me-3" type="submit">Guardar</button>
                        <button type="button" class="btn btn-secondary mx-2" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
